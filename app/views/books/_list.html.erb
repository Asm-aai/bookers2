<div class="container">
  <div class="row">
    <div class="col">
      <h2>New book</h2>
      <%= form_with model: book, url: books_path do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class: "form-control mt-2" %>
        <p>Opinion</p>
        <%= f.text_area :body, class: "form-control mt-2" %>
        <%= f.submit 'Create Book',class: "btn btn-success mt-3" %>
      <% end %>
    </div>
  </div>
</div>