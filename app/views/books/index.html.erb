<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <!--%= book.user.image %>-->
  <%= image_tag book.user.get_profile_image(100, 100) %>
  <p>投稿ユーザー画像</p>
  <p>Title：<%= link_to book.title, book_path(book.id) %></p>
  <p>Opinion：<%= book.body %></p>
<% end %>