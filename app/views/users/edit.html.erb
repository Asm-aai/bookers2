<% if @user.errors.any? %>
  <%= @user.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row no-gutters pt-3">
    <div class="col-md-6 mx-2 mx-sm-auto px-0">
      <h1>User info</h1>
      <div class="form_body">
        <%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>
          <label for="inputname">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputname", class: "form-control" %>
          <br>
          <label for="inputimage">Image</label>
          <%= f.file_field :profile_image, id: "inputimage", class: "form-control border border-0" %>
          <br>
          <label for="inputintroduction">Introduction</label>
          <%= f.text_area :introduction, class: "form-control" %>
          <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>