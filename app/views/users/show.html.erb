<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <h3>name</h3>
  <h3><%= @user.name %></h3>
  <h3>introduction</h3>
  <h3><%= @user.introduction %></h3>

</div>


<h1>Books</h1>
<%= @books.each do |book| %>
  <div>
    <p><%= image_tag book.user.get_profile_image(100, 100) %></p>
    <p><%= book.title %></p>
    <%= link_to book.title, book_path(book.id) %>
    <p><%= book.body %></p>
  </div>
<% end %>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>