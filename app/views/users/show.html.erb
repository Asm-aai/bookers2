<%= render 'info', user: @user %>


<%= render 'books/list', book: @book %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <p><%= image_tag book.user.get_profile_image(100, 100) %></p>
    <p><%= book.title %></p>
    <%= link_to book.title, book_path(book.id) %>
    <p><%= book.body %></p>
  </div>
<% end %>

